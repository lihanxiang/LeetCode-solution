class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        if (letters.length == 0 || target == ' '){
            return ' ';
        }
        int lo = 0, hi = letters.length - 1;
        while (lo <= hi){
            int mid = lo + (hi - lo) / 2;
            if (letters[mid] <= target){
                lo = mid + 1;
            } else {
                hi = mid - 1;
            }
        }
        return lo < letters.length ? letters[lo] : letters[0];
    }
}