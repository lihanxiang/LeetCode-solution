class Solution {
    public int rotatedDigits(int N) {
        int count = 0;
        for (int i = 1; i <= N; i++) {
            if (isValid(i)){
                count++;
            }
        }
        return count;
    }

    public boolean isValid(int N){
        boolean result = false;
        while (N > 0){
            if (N % 10 == 2 || N % 10 == 5 || N % 10 == 6 || N % 10 == 9){
                //需要判断一整个数字，所以不能在满足几个条件中的一个时就退出
                result = true;
            } if (N % 10 == 3 || N % 10 == 4 || N % 10 == 7){
                //如果有一个条件不满足，就退出
                return false;
            }
            N /= 10;
        }
        return result;
    }
}