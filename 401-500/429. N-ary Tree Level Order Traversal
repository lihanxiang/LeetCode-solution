//用广搜，每层的节点放入一个列表
class Solution {
    public List<List<Integer>> levelOrder(Node root) {
        List<List<Integer>> lists = new ArrayList<>();
        Queue<Node> queue = new LinkedList<>();
        if (root == null){
            return lists;
        }
        queue.add(root);
        while (!queue.isEmpty()){
            List<Integer> list = new ArrayList<>();
            int size = queue.size();
            for (int i = 0; i < size; i++) {
                Node node = queue.poll();
                list.add(node.val);
                for (Node n:
                        node.children) {
                    queue.add(n);
                }
            }
            lists.add(list);
        }
        return lists;
    }
}