class Solution {
    public int countSegments(String s) {
        int count = 0;
        if (s.equals("")){
            return 0;
        }
        //判断每个单词的首字母
        if (s.charAt(0) != ' '){
            count++;
        }
        for (int i = 1; i < s.length(); i++) {
            if (s.charAt(i) != ' ' && s.charAt(i - 1) == ' '){
                count++;
            }
        }
        return count;
    }
}