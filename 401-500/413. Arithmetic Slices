class Solution {
    public int numberOfArithmeticSlices(int[] A) {
        if (A.length == 0){
            return 0;
        }
        int n = A.length;
        int[] dp = new int[n];
        for (int i = 2; i < n; i++){
            if (A[i] - A[i - 1] == A[i - 1] - A[i - 2]){
                dp[i] = dp[i - 1] + 1;
            }
        }
        int count = 0;
        for (int i : dp){
            count += i;
        }
        return count;
    }
}