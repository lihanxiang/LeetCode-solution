class Solution {
    public String findLongestWord(String s, List<String> d) {
        if (s.length() == 0){
            return "";
        }
        String result = "";
        for (String str : d){
            int l1 = result.length(), l2 = str.length();
            if (l1 > l2 || (l1 == l2 && result.compareTo(str) < 0)){
                continue;
            }
            if (isValid(s, str)){
                result = str;
            }
        }
        return result;
    }
    
    public boolean isValid(String s, String target){
        int p1 = 0, p2 = 0;
        while (p1 < s.length() && p2 < target.length()){
            if (s.charAt(p1) == target.charAt(p2)){
                p1++;
                p2++;
            } else {
                p1++;
            }
        }
        return p2 == target.length();
    }
}