// 直接在叶节点一个一个返回，得到最后的值
class Solution {
    public int maxDepth(Node root) {
        return DFS(root);
    }

    public int DFS(Node root){
        int maxDepth = 0;
        if (root == null){
            return 0;
        }
        for (Node child :
                root.children) {
            maxDepth = Math.max(maxDepth, DFS(child));
        }
        return maxDepth + 1;
    }
}

class Solution {
    private int max = 0;
    public int maxDepth(Node root) {
        if (root == null){
            return 0;
        }
        DFS(root, 1);
        return max;
    }
    
    public void DFS(Node root, int depth){
        if (root == null){
            return;
        }
        max = Math.max(max, depth);
        for (Node n : root.children){
            DFS(n, depth + 1);
        }
    }
}