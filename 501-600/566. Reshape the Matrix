//按给定的大小创建数组，如果不能赋值成功（抛出异常），就返回原数组
class Solution {
    public int[][] matrixReshape(int[][] nums, int r, int c) {
        ArrayList<Integer> list = new ArrayList<>();
        for (int i = 0; i < nums.length; i++) {
            for (int j = 0; j < nums[i].length; j++) {
                list.add(nums[i][j]);
            }
        }
        int[][] newArr = new int[r][c];
        try {
            for (int i = 0; i < r; i++) {
                for (int j = 0; j < c; j++) {
                    newArr[i][j] = list.get(j + c * i);
                }
            }
        } catch (Exception e){
            return nums;
        }
        return newArr;
    }
}