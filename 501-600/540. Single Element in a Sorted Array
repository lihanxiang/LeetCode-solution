class Solution {
    public int singleNonDuplicate(int[] nums) {
        if (nums.length == 0){
            return 0;
        }
        int lo = 0, hi = nums.length - 1;
        while (lo < hi){
            int mid = lo + (hi - lo) / 2;
            if (mid % 2 == 1){
                mid--;
            }
            if (nums[mid] == nums[mid + 1]){
                lo = mid + 2;
            } else {
                hi = mid - 1;
            }
        }
        return nums[lo];
    }
}