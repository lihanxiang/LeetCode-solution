//先上下翻转，再左右翻转
class Solution {
    public void rotate(int[][] matrix) {
        if (matrix.length == 0){
            return;
        }
        int n = matrix.length;
        int temp;
        for (int i = 0; i < n; i++){
            for (int j = i; j < n; j++){
                temp = matrix[i][j];
                matrix[i][j] = matrix[j][i];
                matrix[j][i] = temp;
            }
        }
        for (int i = 0; i < n; i++){
            for (int j = 0; j < n / 2; j++){
                temp = matrix[i][j];
                matrix[i][j] = matrix[i][n - 1 - j];
                matrix[i][n - 1 - j] = temp;
            }
        }
    }
}

//从四周开始，每次翻转四个点
class Solution {
    public void rotate(int[][] matrix) {
        if (matrix.length == 0){
            return;
        }
        int n = matrix.length;
        int t1, t2, t3, t4;
        for (int i = 0; i < n / 2; i++){
            for (int j = i; j < n - i - 1; j++){
                t1 = matrix[i][j];
                t2 = matrix[j][n - 1 - i];
                t3 = matrix[n - 1 - i][n - 1 - j];
                t4 = matrix[n - 1 - j][i];
                matrix[j][n - 1 - i] = t1;
                matrix[n - 1 - i][n - 1 - j] = t2;
                matrix[n - 1 - j][i] = t3;
                matrix[i][j] = t4;
            }
        }
    }
}