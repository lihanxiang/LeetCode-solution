//将 0 和 2 分别交换至最左和最右
class Solution {
    public void sortColors(int[] nums) {
        if (nums.length == 0){
            return;
        }
        int left = 0, right = nums.length - 1, cur = 0;
        while (cur <= right){
            if (nums[cur] == 0){
                int temp = nums[cur];
                nums[cur] = nums[left];
                nums[left] = temp;
                left++;
            } 
            if (nums[cur] == 2){
                int temp = nums[cur];
                nums[cur] = nums[right];
                nums[right] = temp;
                right--;
                cur--;
            }
            cur++;
        }
    }
}