class Solution {
    public int mySqrt(int x) {
        int root = 1;
        if (x == 0){
            return 0;
        }
        while (root <= x / root){
            if (root <= x / root && (root + 1) > x / (root + 1)){
                break;
            }
            root++;
        }
        return root;
    }
}


class Solution {
    public int mySqrt(int x) {
        if (x <= 1){
            return x;
        }
        int lo = 1, hi = x;
        while (lo <= hi){
            int mid = lo + (hi - lo) / 2;
            int sqrt = x / mid;
            if (sqrt == mid){
                return mid;
            } else if (sqrt > mid){
                lo = mid + 1;
            } else {
                hi = mid - 1;
            }
        }
        return hi;
    }
}