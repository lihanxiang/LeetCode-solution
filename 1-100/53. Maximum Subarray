class Solution {
    public int maxSubArray(int[] nums) {
        int sum = 0, max = Integer.MIN_VALUE;
        for (int i = 0; i < nums.length; i++){
            if (sum < 0){
                sum = nums[i];
            } else {
                sum += nums[i];
            }
            if (sum > max){
                max = sum;
            }
        }
        return max;
    }
}

// 第二个方法要慢一些，因为有调用函数
class Solution {
    public int maxSubArray(int[] nums) {
        int sum = 0, max = Integer.MIN_VALUE;
        for (int i = 0; i < nums.length; i++){
            sum = Math.max(sum, 0) + nums[i];
            max = Math.max(max, sum);
        }
        return max;
    }
}