class Solution {
    public int mincostTickets(int[] days, int[] costs) {
        if (days.length == 0){
            return 0;
        }
        boolean[] travel = new boolean[366];
        int[] dp = new int[366];
        for (int i = 0; i < days.length; i++){
            travel[days[i]] = true;
        }
        int min = 0;
        for (int i = 1; i <= 365; i++){
            if (!travel[i]){
                dp[i] = dp[i - 1];
                continue;
            }
            min = dp[i - 1] + costs[0];
            min = Math.min(min, dp[Math.max(0, i - 7)] + costs[1]);
            min = Math.min(min, dp[Math.max(0, i - 30)] + costs[2]);
            dp[i] = min;
        }
        return dp[365];
    }
}