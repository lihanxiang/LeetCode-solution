class Solution {
    public int rob(int[] nums) {
        int n = nums.length;
        if (n == 0){
            return 0;
        }
        if (n == 1){
            return nums[0];
        }
        return Math.max(rob(nums, 1, n), rob(nums, 0, n - 1));
    }
    
    public int rob(int[] nums, int begin, int end){
        int pre1 = 0, pre2 = 0, cur = 0;
        for (int i = begin; i < end; i++){
            cur = Math.max(pre2 + nums[i], pre1);
            pre2 = pre1;
            pre1 = cur;
        }
        return cur;
    }
}