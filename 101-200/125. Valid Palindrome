class Solution {
    public boolean isPalindrome(String s) {
        char[] str = s.toCharArray();
        int left = 0, right = str.length - 1;
        while (left <= right){
            while (left <= right && !isLetter(str[left])){
                left++;
            }
            while (left <= right && !isLetter(str[right])){
                right--;
            }
            if (left <= right && Character.toLowerCase(str[left]) != Character.toLowerCase(str[right])){
                return false;
            }
            left++;
            right--;
        }
        return true;
    }
    
    public boolean isLetter(char c){
        if ((Character.toLowerCase(c) >= 'a' && Character.toLowerCase(c) <= 'z') || (c >= '0' && c <= '9')){
            return true;
        }
        return false;
    }
}