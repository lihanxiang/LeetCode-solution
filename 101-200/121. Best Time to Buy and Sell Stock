// 记录 profit，并不断移动 buy，直到最后
class Solution {
    public int maxProfit(int[] prices) {
        if (prices.length == 0){
            return 0;
        }
        int buy = prices[0], profit = 0;
        for (int i = 1; i < prices.length; i++){
            if (prices[i] > buy){
                if (prices[i] - buy > profit){
                    profit = prices[i] - buy;
                }
            } else {
                buy = prices[i];
            }
        }
        return profit;
    }
}