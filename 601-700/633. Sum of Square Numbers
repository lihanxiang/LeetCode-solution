class Solution {
    public boolean judgeSquareSum(int c) {
        if (c < 0){
            return false;
        }
        if (c == 1){
            return true;
        }
        int lo = 0, hi = (int)Math.sqrt(c);
        while (lo <= hi){
            int num = lo * lo + hi * hi;
            if (num == c){
                return true;
            } else if (num < c){
                lo++;
            } else {
                hi--;
            }
        }
        return false;
    }
}