class Solution {
    private int sum = 0;
    HashMap<Integer, Employee> map = new HashMap<>();
    public int getImportance(List<Employee> employees, int id) {
        if (employees.size() == 0){
            return 0;
        }
        for (Employee e : employees){
            map.put(e.id, e);
        }
        helper(id);
        return sum;
    }
    
    public int helper(int id){
        Employee e = map.get(id);
        sum += e.importance;
        for (Integer i : e.subordinates){
            helper(map.get(i).id);
        }
        return sum;
    }
}